ion-view(title='CREATE EVENT')
  ion-pane.has-header#create_event
    form(name='createEventForm')
      .form-group#android
        .row
          input#title(ng-class='eventInfo.name ? "no_padding" : ""', type='text', placeholder='EVENT TITLE', ng-model="eventInfo.name",required)
        .line
          .list_separatebar
        .row
          .col(ng-click='InputStartDate()')
            input#start_date(ng-class='startDate ? "no_padding" : ""', type='text', placeholder='START DATE',ng-model='startDate',readOnly,required)
          .col(ng-click='InputStartTime()')
            input#start_time(ng-class='startTime ? "no_padding" : ""', type='text', placeholder='START TIME',ng-model='startTime',readOnly,required)
        .row
          .col(ng-click='InputEndDate()')
            input#end_date(ng-class='endDate ? "no_padding" : ""', type='text', placeholder='END DATE',ng-model="endDate",readOnly,required)
          .col(ng-click='InputEndTime()')
            input#end_time(ng-class='endTime ? "no_padding" : ""', type='text', placeholder='END TIME',ng-model="endTime",readOnly,required)
        .line
          .list_separatebar
        .row
          .col
            input#location(ng-class='eventInfo.place ? "no_padding" : ""', type='text', placeholder='LOCATION', ng-model="eventInfo.place")
        .line
          .list_separatebar
        .row.notes
          .col
            textarea#notes(ng-class='eventInfo.desc ? "no_padding_textarea" : ""',placeholder='NOTES', ng-model="eventInfo.desc")
        .publish
          button.btn_publish(ng-click='pubish()',ng-disabled="createEventForm.$invalid") 
            span PUBLISH